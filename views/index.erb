<h1>All Products:</h1>


<% @products.each do |product| %>
  <div class="panel panel-default">
    <div class="panel-heading"><a href='products/<%=product.id%>'><%= product.name  %></a></div>
    <div class="panel-body">
      <h3>Description</h3>
      <p><%= product.description%></p>
      <h3>Price</h3>
      <p><%= product.price%></p>
    </div>
  </div>
<% end %>
